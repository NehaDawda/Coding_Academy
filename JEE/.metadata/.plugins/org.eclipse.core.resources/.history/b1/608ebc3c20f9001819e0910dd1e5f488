 * 
 */
package com.jp.inheritence.clients;

import javax.persistence.EntityManager;

import com.jp.inheritence.entities.Address;
import com.jp.inheritence.entities.Employee;
import com.jpm.inheritence.util.JPAUtil;

/**
 * @author Neha
 *
 */
public class ClientOTO {
	public static void main(String[] args){
		EntityManager em = JPAUtil.getEntityManager();
		em.getTransaction().begin();
		
		//address obj
		Address homeAddress = new Address();
		homeAddress.setAddressId(121L);
		homeAddress.setStreet("MG Road");
		homeAddress.setCity("Pune");
		homeAddress.setState("MH");
		homeAddress.setZipCode("411 017");
		
		//employee obj
		Employee emp = new Employee();
		emp.setEmpId(102L);
		emp.setEmpName("Zara");
		emp.setEmpSal(99.99);
		
		//set address to the emp
		emp.setAddress(homeAddress);
		
		//now persist the emp
		em.persist(emp);
		
		//commit transaction
		em.getTransaction().commit();
		em.close();
	}
}
